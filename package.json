    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "husky": "^0.14.3",
    "jest": "22.4.3",
    "lint-staged": "^7.0.5",
    "prettier": "1.12.1",
